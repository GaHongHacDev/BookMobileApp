<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_050"
    android:padding="16dp"
    tools:context=".Fragment.ManageCategoryFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btn_create_category"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="  Tạo thể loại mới  "
            android:layout_marginBottom="12dp"
            android:textColor="@color/white"
            android:paddingHorizontal="40dp"
            android:drawableStart="@drawable/baseline_add_24"
            android:background="@drawable/bg_btn_solid" />

        <ListView
            android:id="@+id/manage_category_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="2dp"/>
    </LinearLayout>
</FrameLayout>