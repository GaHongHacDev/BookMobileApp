<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:padding="5dp"
        android:layout_marginBottom="12dp"
        android:elevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/admin_category_iv_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:srcCompat="@drawable/image_placeholder" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/admin_category_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category Name"
                        android:textColor="@color/neutral_900"
                        android:textSize="24sp"
                        android:paddingBottom="8dp"
                        android:fontFamily="@font/nunito_medium"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp">
                        <ImageButton
                            android:id="@+id/admin_category_btn_delete"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="64dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_btn_solid_red"
                            android:src="@drawable/ic_baseline_delete_24" />

                        <Button
                            android:id="@+id/admin_category_btn_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_solid"
                            android:text="Chỉnh sửa"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16dp" />



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>