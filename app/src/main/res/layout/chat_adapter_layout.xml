<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/primary_050"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/oppoLayout"
            android:orientation="vertical"
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp">

            <TextView
                android:id="@+id/oppoMessage"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:background="@drawable/bg_gray_solid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="This is opponet message"/>

            <TextView
                android:id="@+id/oppoMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:text="08-11-2023 10:10 AM"/>

        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/oppoLayout"
            android:layout_alignParentEnd="true"
            android:id="@+id/myLayout"
            android:orientation="vertical"
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp">

            <TextView
                android:id="@+id/myMessage"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                android:background="@drawable/bg_btn_solid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:backgroundTint="@color/primary_500"
                android:text="This is my message"/>

            <TextView
                android:id="@+id/myMsgTime"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:text="08-11-2023 10:10 AM"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>