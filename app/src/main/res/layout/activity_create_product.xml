<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_050"
    android:padding="16dp"
    tools:context=".Activity.CreateProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Thêm sản phẩm"
                android:textColor="@color/primary_700"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/add_product_iv_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/add_product_txt_image_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_txt"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Hình ảnh"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="#797183EA"
                    android:textColorLink="@color/mainColorLight"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/add_product_btn_show_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_solid"
                    android:text="Hiện"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:id="@+id/add_product_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_txt"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Tên sản phẩm"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="#797183EA"
                android:textColorLink="@color/mainColorLight"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:id="@+id/add_product_txt_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_txt"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Tên tác giả"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="#797183EA"
                android:textColorLink="@color/mainColorLight"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:id="@+id/add_product_txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_txt"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Giá sản phẩm"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="#797183EA"
                android:textColorLink="@color/mainColorLight"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <EditText
                android:id="@+id/add_product_txt_stock_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_txt"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Số lượng sản phẩm"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="#797183EA"
                android:textColorLink="@color/mainColorLight"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:id="@+id/add_product_txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_txt"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Mô tả sản phẩm"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="#797183EA"
                android:textColorLink="@color/mainColorLight"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_txt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="Thể loại"
                    android:textColor="@color/neutral_900"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/add_product_spinner_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:padding="5dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/add_product_btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_solid"
                android:padding="5dp"
                android:text="Thêm sản phẩm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>